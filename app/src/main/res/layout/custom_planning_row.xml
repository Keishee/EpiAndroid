<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/planningModule"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Sample text"
            android:textColor="#2d2d2d" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/planningCourse"
            android:layout_below="@+id/planningModule"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Sample text"
            android:textColor="#454545" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/planningStart"
            android:layout_below="@+id/planningCourse"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Sample text"
            android:textColor="#454545" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/planningEnd"
            android:layout_below="@+id/planningStart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Sample text"
            android:textColor="#454545" />
    </RelativeLayout>
</LinearLayout>